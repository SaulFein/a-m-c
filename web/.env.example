# Database (your existing MongoDB connection string)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/dbname"

# Auth.js - Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# Google OAuth (from Google Cloud Console)
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Email for Magic Links (Gmail with App Password or other SMTP)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@authenticmotorcars.com"

# Admin Access - Comma-separated list of allowed email addresses
ADMIN_EMAILS="admin@example.com,owner@example.com"

# Filestack (existing API key)
NEXT_PUBLIC_FILESTACK_API_KEY="your-filestack-api-key"
FILESTACK_SECRET="your-filestack-secret"

# Contact Form Recipient
CONTACT_EMAIL="sales@authenticmotorcars.com"

# Site URL (for OAuth callbacks)
NEXTAUTH_URL="http://localhost:3000"
# In production: NEXTAUTH_URL="https://www.authenticmotorcars.com"
